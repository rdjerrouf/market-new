<?xml version="1.0" encoding="utf-8" ?>
<!-- Post Item Page - Allows users to create new marketplace listings -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Market.ViewModels"
             x:Class="Market.Views.PostItemPage"
             x:DataType="viewmodels:PostItemViewModel"
             Title="Post New Item">

    <!-- Main ScrollView to handle content overflow -->
    <ScrollView>
        <!-- Main layout container with spacing and padding -->
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Page Title -->
            <Label 
                Text="Create New Listing"
                FontSize="24"
                HorizontalOptions="Center"/>

            <!-- Item Title Input -->
            <Entry 
                Placeholder="Title"
                Text="{Binding Title}"
                MaxLength="100"/>

            <!-- Item Description Input - Multiline -->
            <Editor 
                Placeholder="Description"
                Text="{Binding Description}"
                HeightRequest="100"
                AutoSize="TextChanges"/>

            <!-- Category Selection Section -->
            <Frame Padding="10" BorderColor="LightGray">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Category"/>
                    <!-- Radio buttons for category selection -->
                    <HorizontalStackLayout Spacing="10">
                        <RadioButton 
                            Content="For Sale" 
                            IsChecked="{Binding Category, Mode=TwoWay}"
                            GroupName="Category"/>
                        <RadioButton 
                            Content="Jobs" 
                            GroupName="Category"/>
                        <RadioButton 
                            Content="Services" 
                            GroupName="Category"/>
                        <RadioButton 
                            Content="Rentals" 
                            GroupName="Category"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Price Input - Numeric keyboard -->
            <Entry 
                Placeholder="Price"
                Text="{Binding Price}"
                Keyboard="Numeric"/>

            <!-- Photo Upload Section -->
            <Button 
                Text="Upload Photo"
                Command="{Binding UploadPhotoCommand}"/>

            <!-- Photo Preview - Only visible when photo is selected -->
            <Image 
                IsVisible="{Binding PhotoUrl, Converter={StaticResource StringNotNullOrEmptyBoolConverter}}"
                Source="{Binding PhotoUrl}"
                HeightRequest="200"
                Aspect="AspectFit"/>

            <!-- Save Button - Disabled when busy -->
            <Button 
                Text="Post Item"
                Command="{Binding SaveItemCommand}"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>

            <!-- Loading Indicator -->
            <ActivityIndicator 
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}"
                HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>