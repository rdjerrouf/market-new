<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Market.ViewModels"
             xmlns:converters="clr-namespace:Market.Converters"
             x:Class="Market.Views.PostItemPage"
             x:DataType="viewmodels:PostItemViewModel"
             Title="Post New Item">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
            <converters:StringEqualityConverter x:Key="StringEqualityConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:StringNotNullOrEmptyBoolConverter x:Key="StringNotNullOrEmptyBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <!-- Page Title -->
            <Label 
                Text="Create New Listing"
                FontSize="24"
                HorizontalOptions="Center"/>

            <!-- Item Title Input with Validation -->
            <VerticalStackLayout Spacing="5">
                <Entry 
                    Placeholder="Title"
                    Text="{Binding Title}"
                    MaxLength="100"/>
                <Label 
                    Text="{Binding TitleError}"
                    TextColor="Red"
                    FontSize="12"
                    IsVisible="{Binding TitleError, Converter={StaticResource StringNotNullOrEmptyBoolConverter}}"/>
            </VerticalStackLayout>

            <!-- Item Description Input with Validation -->
            <VerticalStackLayout Spacing="5">
                <Editor 
                    Placeholder="Description"
                    Text="{Binding Description}"
                    HeightRequest="100"
                    AutoSize="TextChanges"/>
                <Label 
                    Text="{Binding DescriptionError}"
                    TextColor="Red"
                    FontSize="12"
                    IsVisible="{Binding DescriptionError, Converter={StaticResource StringNotNullOrEmptyBoolConverter}}"/>
            </VerticalStackLayout>

            <!-- Category Selection Section with Validation -->
            <Frame Padding="10" BorderColor="LightGray">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Category"/>
                    <HorizontalStackLayout Spacing="10">
                        <RadioButton 
                            Content="For Sale" 
                            IsChecked="{Binding SelectedCategory, Mode=TwoWay, Converter={StaticResource StringToBoolConverter}, ConverterParameter=For Sale}"/>
                        <RadioButton 
                            Content="Jobs" 
                            IsChecked="{Binding SelectedCategory, Mode=TwoWay, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Jobs}"/>
                        <RadioButton 
                            Content="Services" 
                            IsChecked="{Binding SelectedCategory, Mode=TwoWay, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Services}"/>
                        <RadioButton 
                            Content="Rentals" 
                            IsChecked="{Binding SelectedCategory, Mode=TwoWay, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Rentals}"/>
                    </HorizontalStackLayout>
                    <Label 
                        Text="{Binding CategoryError}"
                        TextColor="Red"
                        FontSize="12"
                        IsVisible="{Binding CategoryError, Converter={StaticResource StringNotNullOrEmptyBoolConverter}}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Price Input with Validation -->
            <VerticalStackLayout Spacing="5">
                <Entry 
                    Placeholder="Price"
                    Text="{Binding Price}"
                    Keyboard="Numeric"/>
                <Label 
                    Text="{Binding PriceError}"
                    TextColor="Red"
                    FontSize="12"
                    IsVisible="{Binding PriceError, Converter={StaticResource StringNotNullOrEmptyBoolConverter}}"/>
            </VerticalStackLayout>

            <!-- Job-specific fields -->
            <VerticalStackLayout IsVisible="{Binding SelectedCategory, Converter={StaticResource StringEqualityConverter}, ConverterParameter='Jobs'}">
                <Entry Placeholder="Job Type" Text="{Binding JobType}"/>
                <DatePicker Date="{Binding AvailableFrom}" />
            </VerticalStackLayout>

            <!-- Service-specific fields -->
            <VerticalStackLayout IsVisible="{Binding SelectedCategory, Converter={StaticResource StringEqualityConverter}, ConverterParameter='Services'}">
                <Entry Placeholder="Service Type" Text="{Binding ServiceType}"/>
            </VerticalStackLayout>

            <!-- Rental-specific fields -->
            <VerticalStackLayout IsVisible="{Binding SelectedCategory, Converter={StaticResource StringEqualityConverter}, ConverterParameter='Rentals'}">
                <Entry Placeholder="Rental Period" Text="{Binding RentalPeriod}"/>
                <DatePicker Date="{Binding AvailableFrom}" />
                <DatePicker Date="{Binding AvailableTo}" />
            </VerticalStackLayout>

            <!-- Photo Upload Section -->
            <Button 
                Text="Upload Photo"
                Command="{Binding UploadPhotoCommand}"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>

            <!-- Photo Preview -->
            <Image 
                IsVisible="{Binding PhotoUrl, Converter={StaticResource StringNotNullOrEmptyBoolConverter}}"
                Source="{Binding PhotoUrl}"
                HeightRequest="200"
                Aspect="AspectFit"/>

            <!-- Save Button -->
            <Button 
                Text="Post Item"
                Command="{Binding SaveItemCommand}"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>

            <!-- Loading Indicator -->
            <ActivityIndicator 
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}"
                HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>