<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodels="clr-namespace:Market.ViewModels"
             xmlns:models="clr-namespace:Market.DataAccess.Models"
             xmlns:models2="clr-namespace:Market.Market.DataAccess.Models"
             x:Class="Market.Views.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="{Binding Title}">
    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" Padding="15,10">
        <!-- Search Bar Row -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="*,50" 
              Margin="0,0,0,10">
            <!-- Search Bar -->
            <SearchBar Grid.Column="0"
                       Placeholder="Search" 
                       Text="{Binding SearchQuery}"
                       SearchCommand="{Binding SearchCommand}"
                       SearchCommandParameter="{Binding Text, Source={RelativeSource Self}}"
                       Margin="0,0,10,0"/>

            <!-- Account Icon -->
            <Frame Grid.Column="1"
                   HeightRequest="40"
                   WidthRequest="40"
                   CornerRadius="20"
                   Padding="0"
                   BackgroundColor="LightGray"
                   HorizontalOptions="End"
                   VerticalOptions="Center">
                <ImageButton Source="accounticon.png"
                            HeightRequest="40"
                            WidthRequest="40"
                            Command="{Binding AccountCommand}"
                            Aspect="AspectFit"
                            BackgroundColor="Transparent">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
            </Frame>
        </Grid>

        <!-- State Picker -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Picker Title="Select State"
                    ItemsSource="{Binding States}"
                    SelectedItem="{Binding SelectedState}"
                    HorizontalOptions="Fill"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="16">
                <Picker.Behaviors>
                    <toolkit:EventToCommandBehavior 
        EventName="SelectedIndexChanged"
        Command="{Binding FilterByStateCommand}"
        CommandParameter="{Binding SelectedState}"/>
                </Picker.Behaviors>
            </Picker>
        </Grid>

        <!-- Top Category Buttons -->
        <Grid Grid.Row="2" 
              ColumnDefinitions="*,*,*,*"
              Margin="0,0,0,20">
            <!-- For Sale -->
            <VerticalStackLayout Grid.Column="0" 
                                HorizontalOptions="Center">
                <ImageButton Source="sellicon.png"
                            Command="{Binding ForSaleCommand}"
                            HeightRequest="50"
                            WidthRequest="50"
                            Margin="0,0,0,5">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
                <Label Text="For Sale"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Jobs -->
            <VerticalStackLayout Grid.Column="1"
                                HorizontalOptions="Center">
                <ImageButton Source="jobsicon.png"
                            Command="{Binding JobsCommand}"
                            HeightRequest="50"
                            WidthRequest="50"
                            Margin="0,0,0,5">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
                <Label Text="Jobs"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Services -->
            <VerticalStackLayout Grid.Column="2"
                                HorizontalOptions="Center">
                <ImageButton Source="servicesicon.png"
                            Command="{Binding ServicesCommand}"
                            HeightRequest="50"
                            WidthRequest="50"
                            Margin="0,0,0,5">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
                <Label Text="Services"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Rentals -->
            <VerticalStackLayout Grid.Column="3"
                                HorizontalOptions="Center">
                <ImageButton Source="renticon.png"
                            Command="{Binding RentalsCommand}"
                            HeightRequest="50"
                            WidthRequest="50"
                            Margin="0,0,0,5">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
                <Label Text="Rentals"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Items List with RefreshView -->
        <RefreshView Grid.Row="3"
                     Command="{Binding RefreshCommand}"
                     IsRefreshing="{Binding IsRefreshing}">
            <CollectionView ItemsSource="{Binding Items}"
                           SelectionMode="Single"
                           EmptyView="No items found"
                           Margin="0,10">
                <CollectionView.EmptyViewTemplate>
                    <DataTemplate>
                        <StackLayout HorizontalOptions="Center" 
                                   VerticalOptions="Center">
                            <Label Text="No items found"
                                   HorizontalOptions="Center"
                                   TextColor="Gray"
                                   FontSize="16"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.EmptyViewTemplate>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Item">
                        <Frame Margin="0,0,0,10" 
                               Padding="10"
                               BorderColor="LightGray">

                            <Grid RowDefinitions="Auto,Auto"
                                  ColumnDefinitions="*,Auto"
                                  RowSpacing="5">
                                <Label Grid.Column="0" 
                                       Text="{Binding Title}"
                                       FontSize="16"
                                       FontAttributes="Bold"/>
                                <Label Grid.Column="1"
                                       Text="{Binding Price, StringFormat='{0:C}'}"
                                       FontAttributes="Bold"
                                       TextColor="DarkGreen"/>
                                <Label Grid.Row="1" 
                                       Grid.ColumnSpan="2"
                                       Text="{Binding Description}"
                                       LineBreakMode="TailTruncation"
                                       TextColor="DimGray"
                                       MaxLines="2"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Bottom Navigation -->
        <Grid Grid.Row="4" 
              ColumnDefinitions="*,*,*,*"
              Margin="0,10,0,0">
            <!-- Home -->
            <VerticalStackLayout Grid.Column="0"
                                HorizontalOptions="Center">
                <ImageButton Source="homeicon.png"
                            Command="{Binding HomeCommand}"
                            HeightRequest="50"
                            WidthRequest="50"
                            Margin="0,0,0,5">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
                <Label Text="Home"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Inbox -->
            <VerticalStackLayout Grid.Column="1"
                                HorizontalOptions="Center">
                <ImageButton Source="inboxicon.png"
                            Command="{Binding InboxCommand}"
                            HeightRequest="50"
                            WidthRequest="50"
                            Margin="0,0,0,5">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
                <Label Text="Inbox"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Add/Post -->
            <VerticalStackLayout Grid.Column="2"
                                HorizontalOptions="Center">
                <ImageButton Source="addicon.png"
                            Command="{Binding PostCommand}"
                            HeightRequest="50"
                            WidthRequest="50"
                            Margin="0,0,0,5">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
                <Label Text="Post"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Listings -->
            <VerticalStackLayout Grid.Column="3"
                                HorizontalOptions="Center">
                <ImageButton Source="listicon.png"
                            Command="{Binding MyListingsCommand}"
                            HeightRequest="50"
                            WidthRequest="50"
                            Margin="0,0,0,5">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
                <Label Text="Listings"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.RowSpan="5"
                          IsRunning="{Binding IsLoading}"
                          IsVisible="{Binding IsLoading}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
    </Grid>
</ContentPage>

