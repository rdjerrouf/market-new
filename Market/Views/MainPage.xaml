<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Market.Views.MainPage"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto" Padding="15,10">
        <!-- Search Bar Row -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="*,50" 
              Margin="0,0,0,10">
            <!-- Search Bar -->
            <SearchBar Grid.Column="0"
                       Placeholder="Search" 
                       Text="{Binding SearchQuery}"
                       SearchCommand="{Binding SearchCommand}"
                       SearchCommandParameter="{Binding Text, Source={RelativeSource Self}}"
                       Margin="0,0,10,0"/>

            <!-- Account Icon -->
            <Frame Grid.Column="1"
                   HeightRequest="40"
                   WidthRequest="40"
                   CornerRadius="20"
                   Padding="0"
                   BackgroundColor="LightGray"
                   HorizontalOptions="End"
                   VerticalOptions="Center">
                <ImageButton Source="accounticon.png"
                             HeightRequest="40"
                             WidthRequest="40"
                             Command="{Binding AccountCommand}"
                             Aspect="AspectFit"
                             BackgroundColor="Transparent">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
            </Frame>
        </Grid>

        <!-- State Picker and Filters Toggle -->
        <Grid Grid.Row="1" 
              ColumnDefinitions="*,Auto" 
              Margin="0,0,0,10">
            <Picker Title="Select State"
                    Grid.Column="0"
                    ItemsSource="{Binding States}"
                    SelectedItem="{Binding SelectedState, Mode=TwoWay}"
                    HorizontalOptions="Fill"
                    BackgroundColor="White"
                    TextColor="Black"
                    FontSize="16"/>

            <Button Grid.Column="1"
                    Text="Show/Hide Filters"
                    Command="{Binding ToggleFiltersCommand}"
                    HorizontalOptions="End"
                    Margin="10,0,0,0"
                    BackgroundColor="Transparent"
                    TextColor="#2196F3"/>
        </Grid>

        <!-- Filters Section -->
        <Grid Grid.Row="2" 
              Margin="0,0,0,10"
              IsVisible="{Binding ShowFilters}">
            <Frame BorderColor="LightGray" Padding="10">
                <VerticalStackLayout Spacing="10">
                    <!-- Price Range -->
                    <Label Text="Price Range" 
                           FontSize="16" 
                           FontAttributes="Bold"/>
                    <Grid ColumnDefinitions="*,Auto,*">
                        <Entry Grid.Column="0"
                               Placeholder="Min Price"
                               Text="{Binding MinPrice}"
                               Keyboard="Numeric"
                               ReturnType="Done"
                               BackgroundColor="White"/>
                        <Label Grid.Column="1" 
                               Text="-" 
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Margin="10,0"/>
                        <Entry Grid.Column="2"
                               Placeholder="Max Price"
                               Text="{Binding MaxPrice}"
                               Keyboard="Numeric"
                               ReturnType="Done"
                               BackgroundColor="White"/>
                    </Grid>

                    <!-- Sort Options -->
                    <Label Text="Sort By" 
                           FontSize="16" 
                           FontAttributes="Bold"/>
                    <Picker ItemsSource="{Binding SortOptions}"
                            SelectedItem="{Binding SelectedSort}"
                            Title="Sort By"
                            BackgroundColor="White"/>

                    <!-- Categories with Checkboxes -->
                    <Label Text="Categories" 
                           FontSize="16" 
                           FontAttributes="Bold"/>
                    <CollectionView ItemsSource="{Binding AvailableCategories}"
                                    SelectionMode="Multiple"
                                    SelectedItems="{Binding SelectedCategories}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="5">
                                    <CheckBox IsChecked="{Binding IsSelected}"
                                              VerticalOptions="Center"/>
                                    <Label Text="{Binding Name}"
                                           VerticalOptions="Center"
                                           Margin="40,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Filter Actions -->
                    <Grid ColumnDefinitions="*,*" 
                          Margin="0,10,0,0">
                        <Button Text="Apply Filters"
                                Command="{Binding ApplyFiltersCommand}"
                                Grid.Column="0"
                                Margin="0,0,5,0"
                                BackgroundColor="#2196F3"/>
                        <Button Text="Clear Filters"
                                Command="{Binding ClearFiltersCommand}"
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                BackgroundColor="#757575"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <!-- Top Category Buttons -->
        <Grid Grid.Row="3" 
              ColumnDefinitions="*,*,*,*"
              Margin="0,0,0,20">
            <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                <ImageButton Source="sellicon.png"
                             Command="{Binding ForSaleCommand}"
                             HeightRequest="50"
                             WidthRequest="50"
                             Margin="0,0,0,5">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
                <Label Text="For Sale" HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                <ImageButton Source="jobsicon.png"
                             Command="{Binding JobsCommand}"
                             HeightRequest="50"
                             WidthRequest="50"
                             Margin="0,0,0,5">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
                <Label Text="Jobs" HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                <ImageButton Source="servicesicon.png"
                             Command="{Binding ServicesCommand}"
                             HeightRequest="50"
                             WidthRequest="50"
                             Margin="0,0,0,5">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
                <Label Text="Services" HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="3" HorizontalOptions="Center">
                <ImageButton Source="renticon.png"
                             Command="{Binding RentalsCommand}"
                             HeightRequest="50"
                             WidthRequest="50"
                             Margin="0,0,0,5">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
                <Label Text="Rentals" HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Items List with RefreshView -->
        <RefreshView Grid.Row="4"
                     Command="{Binding RefreshCommand}"
                     IsRefreshing="{Binding IsRefreshing}">
            <CollectionView ItemsSource="{Binding Items}"
                            SelectionMode="Single"
                            EmptyView="No items found"
                            Margin="0,10">
                <CollectionView.EmptyViewTemplate>
                    <DataTemplate>
                        <StackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center">
                            <Label Text="No items found"
                                   HorizontalOptions="Center"
                                   TextColor="Gray"
                                   FontSize="16"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.EmptyViewTemplate>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,0,0,10" 
                               Padding="10"
                               BorderColor="LightGray">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                                  ColumnDefinitions="*,Auto"
                                  RowSpacing="5">
                                <!-- Title and Price -->
                                <Label Grid.Column="0" 
                                       Text="{Binding Title}"
                                       FontSize="16"
                                       FontAttributes="Bold"/>
                                <Label Grid.Column="1"
                                       Text="{Binding Price, StringFormat='{0:C}'}"
                                       FontAttributes="Bold"
                                       TextColor="DarkGreen"/>

                                <!-- Category Info -->
                                <FlexLayout Grid.Row="1" 
                                            Grid.ColumnSpan="2"
                                            Wrap="Wrap"
                                            AlignItems="Center">
                                    <!-- Main Category -->
                                    <Label Text="{Binding Category}"
                                           TextColor="Gray"
                                           FontSize="14"
                                           Margin="0,0,5,0"/>

                                    <!-- Separator -->
                                    <Label Text="•"
                                           TextColor="Gray"
                                           Margin="0,0,5,0"/>

                                    <!-- State -->
                                    <Label Text="{Binding State}"
                                           TextColor="Gray"
                                           FontSize="14"/>
                                </FlexLayout>

                                <!-- Description -->
                                <Label Grid.Row="2" 
                                       Grid.ColumnSpan="2"
                                       Text="{Binding Description}"
                                       LineBreakMode="TailTruncation"
                                       TextColor="DimGray"
                                       MaxLines="2"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Bottom Navigation -->
        <Grid Grid.Row="5" 
              ColumnDefinitions="*,*,*,*"
              Margin="0,10,0,0">
            <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                <ImageButton Source="homeicon.png"
                             Command="{Binding HomeCommand}"
                             HeightRequest="50"
                             WidthRequest="50"
                             Margin="0,0,0,5">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
                <Label Text="Home" HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                <ImageButton Source="inboxicon.png"
                             Command="{Binding InboxCommand}"
                             HeightRequest="50"
                             WidthRequest="50"
                             Margin="0,0,0,5">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
                <Label Text="Inbox" HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                <ImageButton Source="addicon.png"
                             Command="{Binding PostCommand}"
                             HeightRequest="50"
                             WidthRequest="50"
                             Margin="0,0,0,5">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>
                <Label Text="Listings" HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>