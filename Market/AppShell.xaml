<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Market.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Market.Views">

    <!-- Authentication -->
    <ShellContent
        Title="Sign In"
        ContentTemplate="{DataTemplate views:SignInPage}"
        Route="SignInPage" />

    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate views:RegistrationPage}"
        Route="RegistrationPage" />
    <!-- Add these inside your Shell -->
    <ShellContent
    Title="Add Item"
    ContentTemplate="{DataTemplate views:AddItem.AddItemPage}"
    Route="AddItemPage" />
    <ShellContent
    Title="For Sale"
    ContentTemplate="{DataTemplate views:AddItem.ForSaleItemPage}"
    Route="ForSaleItemPage" />
    <ShellContent
    Title="Rental"
    ContentTemplate="{DataTemplate views:AddItem.RentalItemPage}"
    Route="RentalItemPage" />
    <ShellContent
    Title="Job"
    ContentTemplate="{DataTemplate views:AddItem.JobItemPage}"
    Route="JobItemPage" />
    <ShellContent
    Title="Service"
    ContentTemplate="{DataTemplate views:AddItem.ServiceItemPage}"
    Route="ServiceItemPage" />
    <!-- Main Content -->
    <ShellContent
        Title="Market"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

</Shell>