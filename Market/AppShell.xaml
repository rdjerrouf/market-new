<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Market.Views"
       x:Class="Market.AppShell">
    <ShellItem Route="signin">
        <ShellContent ContentTemplate="{DataTemplate local:SignInPage}" />
    </ShellItem>
    <ShellItem Route="register">
        <ShellContent ContentTemplate="{DataTemplate local:RegistrationPage}" />
    </ShellItem>
    <ShellItem Route="MainPage">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </ShellItem>
</Shell>